{
    "compilerOptions": {
      "target": "es5",
      "module": "amd",
      "lib": ["DOM"],

      "sourceMap": true,
      // "outFile": "./public/js/app.js",
      // "outDir": "./public/js",
      "rootDir": "./resources/ts",

      "strict": true,
      "noImplicitAny": false,

      "moduleResolution": "node",

      "esModuleInterop": true,

      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
