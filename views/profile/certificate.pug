extends ../layouts/default

block main
  .certificate
    .certificate-container
      .certificate-header
        | !{svg.gaLogo}
        h2.certificate-title !{course.title}

      .certificate-body
        .certificate-badge
          img(src=`/courses/${course.slug}/badge/` alt=`Course badge for ${course.title}`)

          if course.completedPercentage
            .certificate-percentage #{course.completedPercentage}%

        .certificate-text
          p This certifies that
          p.certificate-name
            strong.certificate-name-holder #{name}
            a.certificate-name-edit(href='/account/') (Edit Name)
          p has completed
          p
            strong !{course.title}
          p on
            |
            |
            b GraphAcademy

          p.date
            +date(course.completedAt)

      //- .certificate-footer
      //-   p.date
      //-     +date(course.completedAt)

    .certificate-share
      h2.overline.body-small Share #{' '}
        if own
          | your
        else
          | this
        | #{' '} achievement
      .addthis_inline_share_toolbox


      if own
        a(target="_blank" href=`https://www.linkedin.com/profile/add?startTask=CERTIFICATION_NAME&name=${course.title}&organizationName=Neo4j&issueYear=${year}&issueMonth=${month}&certUrl=${encodeURIComponent(url)}&certId=${course.enrolmentId}`)
          | Add Certification to your LinkedIn Profile
          | !{url}



block scripts
  script(src='//s7.addthis.com/js/300/addthis_widget.js#pubid=ra-6135ef3e00ccdfbb', async='async')