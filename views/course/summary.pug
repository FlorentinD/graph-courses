extends ../layouts/classroom

block main

  .module
    .module-title
      h1 !{title}
    .module-content.doc !{doc}

    if course.progressTo
      .admonition.admonition--tip.next-steps
        h2.admonition-title Next Steps
        p Once you have completed this course, we recommend you take the following course#{course.progressTo.length > 1 ? 's' : ''}:
        ul
          for next in course.progressTo
            li
              a(href=next.link) !{next.title}
