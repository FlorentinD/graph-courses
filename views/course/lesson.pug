extends ../layouts/classroom

block main

  .module
    .module-title
      h1 #{title}
    .module-content !{doc}

    if completed
      .admonition.admonition--success
        h2.admonition-title Your work here is done!
        p You have already completed this lesson.  There is no need to re-take the quiz.
          |
          |
          if next
            a(href=next.link) Go to the next lesson.

  include ../partials/pagination