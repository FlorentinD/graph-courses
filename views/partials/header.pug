          if user
            .navbar-item
              a.navbar-link(href='/account/courses/') My Courses

            .navbar-item
              a.navbar-link.navbar-account.navbar-primary(href='/account/')
                //- if user.given_name
                //-   | Hey, #{user.given_name}!
                //- else
                | My Account
              .navbar-dropdown
